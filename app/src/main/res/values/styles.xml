<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/tools">
    <!--creating the action bar and setting the colors and types
        sets main themes for the action bar throughout the app-->
    <style name="MainTheme" parent="@style/Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:colorPrimary">@color/primary_material_light</item>
        <item name="colorPrimary">@android:color/background_light</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:navigationBarColor">@color/unr_blue</item>
        <item name="android:colorAccent">@color/unr_blue</item>
        <item name="android:colorForeground">@color/unr_blue</item>
        <item name="android:dropDownListViewStyle">@style/Theme.MyListView</item>
    </style>
    <style name="ActionBarStyle">
        <item name="android:textColor">@color/unr_blue</item>
    </style>
    <style name="Theme.MyListView" parent="@android:style/Widget.Holo.Light">
        <item name="android:listSelector">@color/unr_blue</item>
        <item name="android:textColor">@color/unr_blue</item>
    </style>
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:layout_width">225dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <style name="LabelTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/unr_blue</item>
    </style>
    <style name="InputTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textColor">@color/unr_blue</item>
        <item name="android:editable">true</item>
        <item name="android:minLines">1</item>
        <item name="android:gravity">top|left</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>
    <style name="DividerTheme">
        <item name="android:background">@color/hint_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>
    <style name="SaveButtonTheme">
        <item name="android:id">@id/saveButton</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:text">Save</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:alpha">.9</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
</resources>
