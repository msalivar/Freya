<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="1"
              android:orientation="vertical"
                android:paddingTop="15dp"
                android:background="@color/unr_off_white">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/grant_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Grant"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:inputType="none"
        android:layout_alignEnd="@+id/name"
        android:paddingRight="15dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="127dp"
        android:layout_height="50dp"
        android:id="@+id/grant"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:hint="Enter Grant Name"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:layout_alignParentEnd="true"
        android:editable="false"
        android:paddingStart="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="135dp"
        android:inputType="textCapWords"
        android:password="false"
        android:layout_alignRight="@+id/post"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/name_label"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/name_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Name"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:inputType="none"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/grant"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/name"
        android:hint="Enter Project Name"
        android:textColorHint="@color/hint_color"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapWords"
        android:textSize="20dp"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:layout_marginRight="15dp"
        android:paddingStart="10dp"
        android:layout_alignStart="@+id/grant"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/grant"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/funding_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Funding"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:inputType="none"
        android:layout_toStartOf="@+id/funding"
        android:layout_alignEnd="@+id/grant_label"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/name_label"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/funding"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapWords"
        android:textSize="20dp"
        android:textColor="@color/unr_blue"
        android:hint="Enter Funding Agency"
        android:textColorHint="@color/hint_color"
        android:background="@drawable/shapes"
        android:layout_alignEnd="@+id/prininvest"
        android:layout_alignStart="@+id/name"
        android:paddingLeft="10dp"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/insitution_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Institution"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:inputType="none"
        android:layout_alignStart="@+id/funding_label"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/funding_label"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/institution"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapWords"
        android:textSize="20dp"
        android:textColor = "@color/unr_blue"
        android:hint="Enter Institution"
        android:textColorHint="@color/hint_color"
        android:background="@drawable/shapes"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/grant"
        android:paddingLeft="10dp"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/funding"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/investigator_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Investigator"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:inputType="none"
        android:layout_alignStart="@+id/insitution_label"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/insitution_label"/>

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/prininvest"
        android:inputType="textCapWords"
        android:textColor="@color/unr_blue"
        android:paddingTop="3dip"
        android:gravity="bottom"
        android:background="@drawable/shapes"
        android:layout_alignTop="@+id/insitution_label"
        android:layout_alignStart="@+id/institution"
        android:layout_marginRight="15dp"
        android:layout_marginTop="75dp"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/post"

        android:text="Post"
        android:textColor="@color/unr_silver"
        android:textSize="30sp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:layout_alignParentTop="false"
        android:layout_marginTop="90dp"
        android:layout_alignTop="@+id/investigator_label"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>