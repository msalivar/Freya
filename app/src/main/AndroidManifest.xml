<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.cil.freya"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- these are the permission nesscary for the app to work properly -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <!-- the activites. Each entry includes at least an activity name. Main activity has a title. and cetain types of intents -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MainTheme">
        <activity
            android:name=".SplashScreen"
            android:label="NRDC">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />>
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".CreateNewProject"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".ChooseProjects"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".ProjectFilterActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".SearchActivity"
            android:windowSoftInputMode="adjustPan"
            >
        </activity>
        <activity android:name=".CreateNewSite"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".CreateNewComponent"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".CreateNewDeployment"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".CreateNewSystem"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".CreateNewDocument"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".CreateNewServiceEntry"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <application android:name="com.example.cil.freya.StaticContextHandler"
            android:windowSoftInputMode="adjustPan">
        </application>

        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name=".ModuleDisplayActivities.PeopleDisplayActivity"
            android:label="@string/title_activity_people_display"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".ModuleDisplayActivities.ProjectDisplayActivity"
            android:label="@string/title_activity_project_display"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".ModuleDisplayActivities.SiteDisplayActivity"
            android:label="@string/title_activity_site_display"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".ModuleDisplayActivities.SystemDisplayActivity"
            android:label="@string/title_activity_system_display"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".ModuleDisplayActivities.DeploymentDisplayActivity"
            android:label="@string/title_activity_deployment_display"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".ModuleDisplayActivities.ComponentDisplayActivity"
            android:label="@string/title_activity_component_display"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".ModuleDisplayActivities.DocumentDisplayActivity"
            android:label="@string/title_activity_document_display"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".ModuleDisplayActivities.ServiceEntryDisplayActivity"
            android:label="@string/title_activity_service_entry_display"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>
