<?xml version="1.0" encoding="utf-8"?>
<!-- Displays the new deployments screen.
    Displays all labels and boxes for the user to enter data.
    Aligns to the screen according to size!-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            tools:context="com.example.cil.freya.CreateNewDocument">

    <Button
        android:id="@+id/saveButton"
        android:layout_width="fill_parent"

        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:alpha=".9"
        android:background="@drawable/button"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25dp"
        />

    <!--<Button-->
    <!--android:id="@+id/cancelButton"-->
    <!--android:text="Cancel"-->
    <!--android:textColor="@color/white"-->
    <!--android:textSize="25dp"-->
    <!--android:layout_width="120dp"-->
    <!--android:layout_height="50dp"-->
    <!--android:background="@drawable/button"/>-->

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:weightSum="1">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray" />

        <EditText
            android:id="@+id/name_label"
            android:layout_width="150dp"
            android:layout_height="50dp"

            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:editable="false"

            android:inputType="none"

            android:paddingLeft="15dp"
            android:text="Name:"

            android:textColor="@color/unr_blue"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/document_name"
            android:hint="Enter Name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:editable="true"
            android:gravity="top|left"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="1"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:scrollbars="vertical"
            android:textColor="@color/unr_blue"
            android:textColorHint="@color/hint_color"
            android:textSize="20dp"
            />

        <View
            android:id="@+id/divider1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray"
            android:layout_alignBottom="@id/document_name"/>

        <EditText
            android:id="@+id/notes_label"
            android:text="Notes:"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/divider1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:editable="false"

            android:inputType="none"

            android:paddingLeft="15dp"

            android:textColor="@color/unr_blue"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/doc_notes"
            android:hint="Enter Notes"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:editable="true"
            android:gravity="top|left"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="1"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:scrollbars="vertical"
            android:textColor="@color/unr_blue"
            android:textColorHint="@color/hint_color"
            android:textSize="20dp"
            android:layout_alignTop="@id/divider1"/>
        <View
            android:id="@+id/divider2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray"
            android:layout_alignBottom="@id/doc_notes"/>
        <EditText
            android:id="@+id/path_label"
            android:text="Path:"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/divider2"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:editable="false"

            android:inputType="none"

            android:paddingLeft="15dp"

            android:textColor="@color/unr_blue"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/path"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:editable="true"
            android:hint="Enter Path"
            android:gravity="top|left"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="1"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:scrollbars="vertical"
            android:textColor="@color/unr_blue"
            android:textColorHint="@color/hint_color"
            android:textSize="20dp"
            android:layout_alignTop="@id/divider2"/>
        <View
            android:id="@+id/divider3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray"
            android:layout_alignBottom="@id/path"/>

        <EditText
            android:id="@+id/project_label"
            android:text="Project:"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/divider3"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:editable="false"

            android:inputType="none"

            android:paddingLeft="15dp"

            android:textColor="@color/unr_blue"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/document_project"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@id/divider3"
            android:editable="true"
            android:gravity="top|left"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="1"

            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:scrollbars="vertical"
            android:textColor="@color/unr_blue"
            android:textColorHint="@color/hint_color"
            android:textSize="20dp"
            />
        <View
            android:id="@+id/divider4"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray"
            android:layout_alignBottom="@id/project_label"/>

        <EditText
            android:id="@+id/site_label"
            android:text="Site:"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/divider4"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:editable="false"

            android:inputType="none"

            android:paddingLeft="15dp"

            android:textColor="@color/unr_blue"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/document_site"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@id/divider4"
            android:editable="true"
            android:gravity="top|left"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="1"

            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:scrollbars="vertical"
            android:textColor="@color/unr_blue"
            android:textColorHint="@color/hint_color"
            android:textSize="20dp"/>
        <View
            android:id="@+id/divider5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray"
            android:layout_alignBottom="@id/site_label"/>

        <EditText
            android:id="@+id/deployment_label"
            android:text="Deployment:"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/divider5"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:editable="false"

            android:inputType="none"

            android:paddingLeft="15dp"

            android:textColor="@color/unr_blue"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/document_deployment"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@id/divider5"
            android:editable="true"
            android:gravity="top|left"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="1"

            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:scrollbars="vertical"
            android:textColor="@color/unr_blue"
            android:textColorHint="@color/hint_color"
            android:textSize="20dp"/>
        <View
            android:id="@+id/divider6"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray"
            android:layout_alignBottom="@id/deployment_label"/>

        <EditText
            android:id="@+id/component_label"
            android:text="Component:"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/divider6"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:editable="false"

            android:inputType="none"

            android:paddingLeft="15dp"

            android:textColor="@color/unr_blue"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/document_component"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@id/divider6"
            android:editable="true"
            android:gravity="top|left"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="1"

            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:scrollbars="vertical"
            android:textColor="@color/unr_blue"
            android:textColorHint="@color/hint_color"
            android:textSize="20dp"/>
        <View
            android:id="@+id/divider7"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray"
            android:layout_alignBottom="@id/component_label"/>
        <EditText
            android:id="@+id/service_label"
            android:text="Service Entry:"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/divider7"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:editable="false"

            android:inputType="none"

            android:paddingLeft="15dp"

            android:textColor="@color/unr_blue"
            android:textSize="20dp"
            android:layout_marginBottom="50dp"/>

        <Spinner
            android:id="@+id/document_service"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@id/divider7"
            android:editable="true"
            android:gravity="top|left"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="1"

            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:scrollbars="vertical"
            android:textColor="@color/unr_blue"
            android:textColorHint="@color/hint_color"
            android:textSize="20dp"
            android:layout_marginBottom="50dp"/>

        <View
            android:id="@+id/divider8"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray"
            android:layout_alignBottom="@id/service_label"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout><!-- From: file:/home/sammie/Desktop/Senior%20Project/Freya/app/src/main/res/layout/activity_document_display.xml -->