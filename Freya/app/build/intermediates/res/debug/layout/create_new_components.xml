<?xml version="1.0" encoding="utf-8"?>
<!--Creates the layout for the Create New Components screen.
    Displays the labels and boxes for users input!-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:tools="http://schemas.android.com/tools"
            android:weightSum="1"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:background="@color/unr_off_white"
            tools:context="com.example.cil.freya.CreateNewComponent" android:fillViewport="false"
            android:paddingBottom="15dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:background="@color/unr_off_white">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/installation_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Installation"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:inputType="none"
        android:paddingRight="15dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/installation"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:hint="Installation Details"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:layout_alignParentEnd="true"
        android:editable="false"
        android:paddingStart="10dp"
        android:layout_marginRight="15dp"
        android:inputType="textCapWords"
        android:password="false"
        android:layout_alignTop="@+id/installation_label" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/manufacturer_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Manufacturer"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:inputType="none"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/installation_label" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/manufacturer"
        android:hint="Enter Manufacturer"
        android:textColorHint="@color/hint_color"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapWords"
        android:textSize="20dp"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:layout_marginRight="15dp"
        android:paddingStart="10dp"
        android:layout_alignTop="@+id/manufacturer_label"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/model_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Model"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:inputType="none"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/manufacturer_label" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/model"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapWords"
        android:textSize="20dp"
        android:textColor="@color/unr_blue"
        android:hint="Enter Model"
        android:textColorHint="@color/hint_color"
        android:background="@drawable/shapes"
        android:paddingLeft="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/model_label"
        android:layout_marginRight="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/name_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Name"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:inputType="none"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/model_label" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/compname"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapWords"
        android:textSize="20dp"
        android:textColor = "@color/unr_blue"
        android:hint="Enter Name"
        android:textColorHint="@color/hint_color"
        android:background="@drawable/shapes"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/name_label"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/serial_number_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Serial Number"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:inputType="none"
        android:layout_below="@+id/name_label"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/serial_number"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapWords"
        android:textSize="20dp"
        android:textColor = "@color/unr_blue"
        android:hint="Enter Serial Number"
        android:textColorHint="@color/hint_color"
        android:background="@drawable/shapes"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/serial_number_label" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/supplier_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Supplier"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:inputType="none"
        android:layout_below="@+id/serial_number_label"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/supplier"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapWords"
        android:textSize="20dp"
        android:textColor = "@color/unr_blue"
        android:hint="Enter Supplier"
        android:textColorHint="@color/hint_color"
        android:background="@drawable/shapes"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/supplier_label" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/vendor_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Vendor"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:inputType="none"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/supplier_label"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/vendor"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapWords"
        android:textSize="20dp"
        android:textColor = "@color/unr_blue"
        android:hint="Enter Vendor"
        android:textColorHint="@color/hint_color"
        android:background="@drawable/shapes"
        android:paddingLeft="10dp"
        android:layout_above="@+id/deployment_label"
        android:layout_alignEnd="@+id/vendor_label"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/deployment_label"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Deployment"
        android:textColor="@color/unr_blue"
        android:background="@drawable/shapes"
        android:editable="false"
        android:paddingStart="15dp"
        android:layout_marginRight="15dp"
        android:inputType="none"
        android:layout_below="@+id/vendor_label"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/deployment"
        android:inputType="textCapWords"
        android:textColor="@color/unr_blue"
        android:paddingTop="3dip"
        android:gravity="bottom"
        android:background="@drawable/shapes"
        android:layout_alignParentBottom="false"
        android:layout_alignEnd="@+id/deployment_label"
        android:layout_alignTop="@+id/deployment_label"/>
        android:layout_marginRight="15dp"
        android:layout_marginTop="64dp"
        android:paddingLeft="10dp"
        android:dropDownSelector="@color/unr_blue"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/wiring_notes"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Enter Wiring Notes"
        android:textColor="@color/unr_blue"
        android:inputType="textCapSentences"
        android:layout_below="@+id/deployment_label"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/newComponentButton"

        android:text="Save"
        android:textColor="@color/unr_silver"
        android:textSize="25dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/CompPhoto"
        android:layout_below="@+id/CompPhoto"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/CompPhoto"
        android:text="Photo"
        android:textColor="@color/unr_silver"
        android:textSize="25dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_below="@+id/wiring_notes"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
</ScrollView><!-- From: file:/home/sammie/Desktop/Senior%20Project/Freya/app/src/main/res/layout/create_new_components.xml -->