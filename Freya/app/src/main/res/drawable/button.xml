<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/accentColor" />
            <corners
                android:radius="10dp" />
            <stroke
                android:width="3dp"
                android:color="@color/highlightColor"/>

        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/accentColor"
                />
            <corners
                android:radius="10dp"
                />
            <size
                android:width="150dp"
                android:height="60dp"
                />
        </shape>
    </item>
</selector>